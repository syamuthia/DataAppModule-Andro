        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sign_up_page"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginBottom="285dp"
        android:background="@drawable/up"
